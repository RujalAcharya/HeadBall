#pragma once
#include "SFML/Graphics.hpp"
#include<sstream>

namespace Headball{
    class time
    {
    private:
        sf::Clock clock;
        sf::Time T;
        int t=0;
        int vt=0;
        int s=0;
        int m=0;
        std::stringstream ss;
    public:
        time();
        ~time();
        void timeElapsed();
        void displayTimer();
        void getTime();
        void resetTimer();
        void draw();
    };

    time::time(/* args */)
    {
    }
    
    time::~time()
    {
    }
    void time::resetTimer(){
        clock.restart();
    }
    void time::timeElapsed(){
        T=clock.getElapsedTime();
    }
    
    void time::getTime(){
        t=T.asSeconds();
        vt=t*18;//Converting 5 minutes into 90
        m=vt/60;
        s=vt-m*60;
    }

    void time::displayTimer(){
        if (m<10)
        {
            ss<<0<<m;
        }
        else
        {
            ss<<m;
        }
        if (s<10)
        {
            ss<<":"<<0<<s;
        }
        else
        {
            ss<<":"<<s;
        }
        sf::Font font;
        font.loadFromFile("OpenSans-Regular.ttf");
        sf::Text text(ss.str(),font);
        text.setCharacterSize(30);
        text.setStyle(sf::Text::Regular) 
    }
    void time::draw(){
        window.draw(text);
    }
}